/* pages/my/my.wxss */

.main{
  background-color: whitesmoke;
}

#head_img{
  height: 160rpx;
  width: 160rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 70rpx;
}

.person_line{
  display: flex;
  flex-direction: row;
  text-align: left;
  margin-top: 30rpx;
  background-color: white;
}


/* =================== info ================ */
.func_in{
  display: flex;
  margin-left: 30rpx;
  border-bottom: 1px solid RGBA(217, 217, 217, .4);
  height:85rpx;
  align-items: center;
}
.func_in:last-child{
  border-bottom:none;
}
.func_in image{
  height: 40rpx;
  width:40rpx;
}
.func_in text{
  color:#7F8389;
  font-size:24rpx;
  flex:1;
  margin-left: 30rpx;
}
.func_in .detail-item-btn{
  width: 50rpx;
  color: #d9d9d9;
  height: 40rpx;
  margin-right: 20rpx;
  text-align: center;
}
.func_in .detail-item-btn::after{
  display: inline-block;
  content:'';
  width: 16rpx;
  height: 16rpx;
  color: #d9d9d9;
  margin-top: 8rpx;
  border:3rpx #d9d9d9 solid;
  border-top-color:transparent;
  border-left-color:transparent;
  transform: rotate(-45deg);
}
.user-name{
  display: flex;
  flex-direction:column;
  font-size: 13px;
}


.func_out{
  margin-top: 100rpx;
  background-color: white;
}



/*=============== 底部版权 ============*/
.weui-footer{
  margin-bottom: 1px;
}
.weui-footer__text{
font-size: 10px;
text-align: center;
}